<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10">


    <TextView
        android:id="@+id/tv_collect_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者"
        android:textColor="@color/item_date"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_collect_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14小时前"
        android:textColor="@color/item_date"
        android:textSize="@dimen/sp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_collect_thumbnail"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_collect_author"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/tv_collect_title"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/item_title"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@+id/iv_collect_thumbnail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_collect_author" />

    <TextView
        android:id="@+id/tv_collect_chapterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:text="开源项目Tab/完成项目。哈哈"
        android:textColor="@color/item_chapter"
        android:textSize="@dimen/item_tv_tag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_collect_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_collect_title"
        app:layout_constraintVertical_bias="1" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_collect_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_like_not" />
</android.support.constraint.ConstraintLayout>