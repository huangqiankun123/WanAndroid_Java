<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/item_title"
        android:textSize="@dimen/sp_16"/>

    <TextView
        android:id="@+id/title_second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/item_desc"
        android:text="Android Studio相关   gradle  官方发布第三方士大夫水电费都是"
        app:layout_constraintTop_toBottomOf="@+id/title_first"
        app:layout_constraintRight_toLeftOf="@+id/iv_arrow_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        app:srcCompat="@drawable/ic_arrow_right_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_24"/>

</android.support.constraint.ConstraintLayout>